---
// Concierge.astro - „Ç≥„É≥„Ç∑„Çß„É´„Ç∏„É•„É¢„Éº„ÉâUI (Ê≠£Â∏∏Áâà„Éô„Éº„Çπ + GVRMÁµ±Âêà)
import ReservationModal from './ReservationModal.astro';

export interface Props {
  apiBaseUrl?: string;
}

const { apiBaseUrl = '' } = Astro.props;
---

<div class="gourmet-chat-container mode-concierge" data-api-base={apiBaseUrl}>
  
  <div class="splash-overlay" id="splashOverlay">
    <video id="splashVideo" class="splash-video" autoplay muted playsinline loop>
      <source src="/splash.mp4" type="video/mp4">
    </video>
    <div class="splash-loading"><div class="spinner"></div><p>Loading...</p></div>
  </div>

  <div class="wait-overlay hidden" id="waitOverlay">
