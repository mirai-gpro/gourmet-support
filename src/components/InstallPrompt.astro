<div id="install-toast" class="install-toast hidden">
  <div class="monster-icon">
    <img src="/pwa-192x192.png" alt="App Icon" class="app-icon" />
  </div>
  <div class="content">
    <p class="title">Gourmet SP</p>
    <div class="stars">★★★★★</div>
    <p class="desc">アプリを入れてAIとグルメ探索！</p>
  </div>
  <button id="install-button" class="install-btn">
    インストール
  </button>
  <button id="close-toast" class="close-btn">×</button>
</div>

<div id="ios-prompt" class="ios-prompt hidden">
  <button id="close-ios" class="close-btn-ios">×</button>
  <div class="ios-content">
    <p class="ios-title">ホーム画面に追加</p>
    <p class="ios-desc">
      画面下、又は右上の「共有」ボタン（四角から矢印）
      <span class="share-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"></path>
          <polyline points="16 6 12 2 8 6"></polyline>
          <line x1="12" y1="2" x2="12" y2="15"></line>
        </svg>
      </span>
      から<br>
      <strong>「ホーム画面に追加」</strong>を選択してください
    </p>
  </div>
  <div class="arrow-down"></div>
</div>

<script>
  // @ts-nocheck
  let deferredPrompt;
  const toast = document.getElementById('install-toast');
  const iosPrompt = document.getElementById('ios-prompt');
  const installBtn = document.getElementById('install-button');
  const closeBtn = document.getElementById('close-toast');
  const closeIosBtn = document.getElementById('close-ios');

  // --- iOS判定ロジック ---
  const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent) && !window.MSStream;
  // PWAとして起動しているかチェック (iOS & Android)
  const isStandalone = window.matchMedia('(display-mode: standalone)').matches || (navigator).standalone;

  // --- Android / PC 用の処理 (beforeinstallprompt) ---
  window.addEventListener('beforeinstallprompt', (e) => {
    e.preventDefault();
    deferredPrompt = e;
    // Androidで、かつスタンドアローンでない場合のみ表示
    if (!isStandalone) {
      toast.classList.remove('hidden');
      setTimeout(() => toast.classList.add('show'), 100);
    }
  });

  installBtn.addEventListener('click', async () => {
    if (deferredPrompt) {
      deferredPrompt.prompt();
      const { outcome } = await deferredPrompt.userChoice;
      console.log(`User response: ${outcome}`);
      deferredPrompt = null;
      toast.classList.remove('show');
      setTimeout(() => toast.classList.add('hidden'), 300);
    }
  });

  closeBtn.addEventListener('click', () => {
    toast.classList.remove('show');
    setTimeout(() => toast.classList.add('hidden'), 300);
  });

  // --- iOS 用の処理 ---
  if (isIOS && !isStandalone) {
    // 少し待ってから表示（ページ読み込み直後は邪魔にならないように）
    setTimeout(() => {
      // ユーザーが閉じた履歴がなければ表示（今回は簡易的に常に表示）
      if (iosPrompt) {
        iosPrompt.classList.remove('hidden');
        setTimeout(() => iosPrompt.classList.add('show'), 100);
      }
    }, 2000);
  }

  if (closeIosBtn) {
    closeIosBtn.addEventListener('click', () => {
      iosPrompt.classList.remove('show');
      setTimeout(() => iosPrompt.classList.add('hidden'), 300);
    });
  }
</script>

